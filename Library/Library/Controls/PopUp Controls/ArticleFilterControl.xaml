<UserControl x:Class="Library.ArticleFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="#FFFFFF" 
                Height="300" 
                Width="300"
        
                BorderBrush="{StaticResource MediumGreyBrush}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="9"
                                          ShadowDepth="1"
                                          Opacity="0.5" />
        </Border.Effect>
        <Grid >

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="2"
                       Style="{StaticResource CloseIconButton}"
                       Content="&#xf00d;"
                       HorizontalAlignment="Right" Margin="10"
                       FontSize="20"
                       Command="{Binding ExitFilter}"
                       />

            <TextBlock Margin="0 30 0 0"
                       Grid.Column="0"
                       Grid.Row="0"
                       Grid.ColumnSpan="3"
                       Text="Filters"      
                       Style="{StaticResource TableHeaderIcon}"
                       
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>






            <CheckBox Margin="10 0 0 0"
                      Grid.Row="2"
                      Grid.Column="0"
                      Content="Titel"
                      FontSize="16"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      VerticalContentAlignment="Center"
                       IsChecked="{Binding TitleFilter}"
                       />

            <CheckBox Margin="10 0 0 0"
                      Grid.Row="3"
                      Grid.Column="0"
                      Content="Författare"
                      FontSize="16"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      VerticalContentAlignment="Center"
                      IsChecked="{Binding AuthorFilter}"
                       />
            <CheckBox Margin="10 0 0 0"
                      Grid.Row="2"
                      Grid.Column="2"
                      Content="ISBN"
                      FontSize="16"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      VerticalContentAlignment="Center"
                      IsChecked="{Binding IsbnFilter}"
                       />
            <CheckBox Margin="10 0 0 0"
                      Grid.Row="3"
                      Grid.Column="2"
                      Content="E-Bok"
                      FontSize="16"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      VerticalContentAlignment="Center"
                      IsChecked="{Binding EBookFilter}"
                       />



            <Button         Grid.Row="6"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Content="Bekräfta"
                            Style="{StaticResource BlueActionButton}"
                            Width="150"
                            Command="{Binding ExitFilter}"
                        />
        </Grid>
    </Border>

</UserControl>