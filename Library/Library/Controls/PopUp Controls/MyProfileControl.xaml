<UserControl x:Class="Library.MyProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#FFFFFF" Margin="300 50"
            BorderBrush="{StaticResource MediumGreyBrush}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="9"
                                          ShadowDepth="1"
                                          Opacity="0.5" />
        </Border.Effect>


        <Grid>

            <local:ButtonWithIcon Width="200" Height="100"
                    Content="Logga ut"
                    IconContent="&#xf2f5;"
                    Command="{Binding Logout}"
                    Style="{StaticResource SideMenuLogoutButton}"
                    Margin="0"
                    />

        </Grid>
        
    </Border>
</UserControl>
