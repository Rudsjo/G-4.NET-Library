<UserControl x:Class="Library.ConfirmationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border Background="#FFFFFF" Margin="450 250"
            BorderBrush="{StaticResource MediumGreyBrush}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="9"
                                          ShadowDepth="1"
                                          Opacity="0.5" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBlock  Grid.Row="0"
                        Margin="0 20 0 0"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Text="Anledning"
                        Style="{StaticResource TableHeaderText}"
                          FontSize="{StaticResource FontSizeRegular}"
                        />


            <!-- Reason for block -->

            <StackPanel Grid.Row="1">

                <ComboBox Margin="20"  
                      Height="60"
                      ItemsSource="{Binding Reasons}"
                      BorderBrush="{StaticResource CustomLightGreyBrush}"
                      SelectedItem="{Binding ChosenReason, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      Text="{Binding ChosenReason, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      Tag="Anledning"
                      FontFamily="{StaticResource MontserratRegular}" 
                      FontSize="{StaticResource FontSizeSmall}"
                      IsEnabled="{Binding ShowReasons}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Background="Transparent" FontFamily="{StaticResource MontserratRegular}" Margin="10" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <Button     Margin="20"
                                Style="{StaticResource ConfirmationButton}"
                                Background="{StaticResource CustomGreenBrush}"
                                Command="{Binding Confirm}"
                                />

                    <Button     Margin="20"
                                Style="{StaticResource AbortButton}"
                                Content="&#xf00d;"
                                Command="{Binding Abort}"
                                >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="360" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
    
</UserControl>
