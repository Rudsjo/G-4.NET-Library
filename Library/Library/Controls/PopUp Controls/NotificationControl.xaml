<UserControl x:Class="Library.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#FFFFFF" 
                Height="500" 
                Width="800"
        
                BorderBrush="{StaticResource MediumGreyBrush}" BorderThickness="2">

        <Border.Effect>
            <DropShadowEffect BlurRadius="9"
                                          ShadowDepth="1"
                                          Opacity="0.5" />
        </Border.Effect>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
               
            </Grid.RowDefinitions>

            <Button
                       Style="{StaticResource CloseIconButton}"
                       Content="&#xf00d;"
                       HorizontalAlignment="Right" Margin="10"
                       FontSize="20"
                       Command="{Binding ExitNotification}"
                       />
            <TextBlock Text="Mina Notiser"
                       Grid.Row="0"
                       Margin="20 30 0 0"
                       Style="{StaticResource MainHeaderText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">

            </TextBlock>

            <TextBlock Text="Böcker som finns att hämta ut"
                       Grid.Row="1"
                       Margin="20 50 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       
                       Style="{StaticResource SubHeaderText}"/>
            
            <HeaderedItemsControl ItemsSource="{Binding CurrentList}" Grid.Row="3" >
                <HeaderedItemsControl.Template>
                    <ControlTemplate TargetType="HeaderedItemsControl">

                        <Border>

                            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">

                                <StackPanel>

                                    <ContentPresenter ContentSource="Header" />

                                    <ItemsPresenter />

                                </StackPanel>

                            </ScrollViewer>

                        </Border>

                    </ControlTemplate>
                </HeaderedItemsControl.Template>
                <HeaderedItemsControl.HeaderTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="9"
                                              ShadowDepth="1"
                                              Opacity="0.2"
                                />

                            </Border.Effect>

                            <Grid Height="50" Margin="50 0 0 10">

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />

                                </Grid.ColumnDefinitions>


                                <TextBlock Grid.Column="0" 
                                           Text="Titel" 
                                           Style="{StaticResource TableHeaderText}"
                                           VerticalAlignment="Bottom" 
                                           HorizontalAlignment="Center"
                                           Width="140"
                                           />

                                <TextBlock Grid.Column="1" 
                                           Text="Författare"
                                           Style="{StaticResource TableHeaderText}"
                                           VerticalAlignment="Bottom" 
                                           HorizontalAlignment="Center"
                                           Width="120"
                                           />

                                <TextBlock Grid.Column="2" 
                                           Text="Edition" 
                                           Style="{StaticResource TableHeaderText}"
                                           VerticalAlignment="Bottom" 
                                           HorizontalAlignment="Center"
                                           Width="90"
                                           />

                                <TextBlock Grid.Column="3" 
                                           Text="Artikel-ID" 
                                           Style="{StaticResource TableHeaderText}"
                                           VerticalAlignment="Bottom" 
                                           HorizontalAlignment="Center"
                                            Width="90"
                                           />
                               

                            </Grid>

                        </Border>
                    </DataTemplate>
                </HeaderedItemsControl.HeaderTemplate>

                <HeaderedItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{StaticResource CustomLightGreyBrush}"
                            BorderThickness="0 0 0 1"
                            Padding="0 20"
                            Background="White"
                            >

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Column 0 -->
                                <ScrollViewer Grid.Column="0" Width="140"
                                          HorizontalScrollBarVisibility="Auto">
                                    <TextBlock
                                       Text="{Binding title}"
                                       VerticalAlignment="Center" HorizontalAlignment="Left" 
                                       Style="{StaticResource TableItemText}"
                                       />
                                </ScrollViewer>

                                <!-- Column 1 -->
                                <ScrollViewer Grid.Column="1" Width="120"
                                          HorizontalScrollBarVisibility="Auto">
                                    <TextBlock
                                       Text="{Binding author}"
                                       VerticalAlignment="Center" HorizontalAlignment="Left"
                                       Style="{StaticResource TableItemText}"
                                       />

                                </ScrollViewer>

                                <!-- Column 2 -->
                                <ScrollViewer Grid.Column="2" Width="90" 
                                          HorizontalScrollBarVisibility="Auto">
                                    <TextBlock 
                                       Text="{Binding edition}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Style="{StaticResource TableItemText}"
                                       />
                                </ScrollViewer>
                                
                                <!-- Column 3 -->
                                <ScrollViewer Grid.Column="3" Width="90" 
                                          HorizontalScrollBarVisibility="Auto">
                                    <TextBlock 
                                       Text="{Binding articleID}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Style="{StaticResource TableItemText}"
                                       />
                                </ScrollViewer>

                            </Grid>
                        </Border>

                    </DataTemplate>
                </HeaderedItemsControl.ItemTemplate>
            </HeaderedItemsControl>


        </Grid>
    </Border>

</UserControl>

