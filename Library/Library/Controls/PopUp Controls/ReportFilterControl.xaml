<UserControl x:Class="Library.ReportFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0"
                    Content="Artiklar"
                    />

            <Button Grid.Column="1" Grid.Row="0"
                    Content="Användare"
                    />

            <Border Grid.Row="1" Grid.ColumnSpan="2"
                    BorderBrush="{StaticResource LightBlueBrush}"
                    BorderThickness="1" Margin="0 5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="9"
                                      ShadowDepth="1"
                                      Opacity="0.2" />
                </Border.Effect>
            </Border>
            
        </Grid>
        
        <!-- Filter options -->
        <Grid Grid.Row="1" Visibility="{Binding ShowArticleFilters, 
                                        Converter={local:BooleanToVisibilityConverter},
                                        ConverterParameter=ErrorText}">

            
            
        </Grid>
            
    </Grid>
</UserControl>
