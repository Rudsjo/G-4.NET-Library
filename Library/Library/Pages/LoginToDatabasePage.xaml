<local:BasePage x:TypeArguments="core:LoginToDatabasePageViewModel"
    x:Class="Library.LoginToDatabasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      xmlns:core="clr-namespace:Library.Core;assembly=Library.Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginToDatabasePage"
      x:Name="Page">
    
    <!--
    
    The page to hold the login form for the database. 
    The page will be active as long as a database is not connected 
    to the application.
    
    -->
    
    
    <!-- TODO: FLYTTA DESSA TILL BASE PAGE -->
    <Page.RenderTransform>
        <SkewTransform AngleX="0" AngleY="0" />
    </Page.RenderTransform>


    <Border>
        <Grid>
            <!-- Main content -->
            <StackPanel
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 TextBlock.TextAlignment="Center">
                
                <!-- Login content box -->
                <Border Background="White"
                        Padding="15 50 15 15"
                        Width="330"
                        Margin="50 50 50 0">
                    
                    <!-- Login content -->
                    <StackPanel>

                        <!-- Header Logo -->
                        <Image Source="/Styling/Images/LibsysLogo.png"
                               MaxHeight="200"
                               MaxWidth="200"
                               Margin="-50 -50 -50 -20"
                               />
                        
                        <!-- Subtext -->
                        <TextBlock Text="Databasinloggning"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 50"
                                   Style="{StaticResource SubHeaderText}"
                                   />

                        <!-- Username -->
                        <TextBox Text="{Binding Username}" 
                                 Tag="Användarnamn"
                                 Style="{StaticResource LoginTextbox}"
                                 />
                        
                        <!-- Save username -->
                        <CheckBox Content="Spara användarnamn"
                                  TextBlock.FontFamily="{StaticResource PassionOneRegular}"
                                  TextBlock.FontSize="{StaticResource FontSizeVerySmall}"
                                  VerticalContentAlignment="Center"
                                  Margin="0 0 0 10"
                                />

                            <!-- Password -->
                        <PasswordBox x:Name="PasswordText"
                                     Style="{StaticResource CustomPasswordBox}"
                                     local:MonitorPasswordProperty.Value = "True"
                                     Tag="Lösenord"
                                     Margin="0 30 0 30" />

                        <!-- Login Button -->
                        <Button Content="Logga in"
                                local:IsBusyProperty.Value="{Binding LoginIsRunning}"
                                Style="{StaticResource LoginButton}"
                                Command="{Binding LoginToDatabase}"
                                CommandParameter="{Binding ElementName=Page}"
                                HorizontalAlignment="Center"
                                Width="150"
                                />

                    </StackPanel>
                </Border>
                
                <!-- Forgot password -->
                <!--<Button Style="{StaticResource TextButton}"
                        Command="{Binding ForgotPassword}"
                        Content="Glömt lösenord..."
                        HorizontalAlignment="Center" />-->

            </StackPanel>
        </Grid>
    </Border>

</local:BasePage>