<local:BasePage x:Class="Library.BackupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BackupPage">

    <!-- 
    
    Backup page to be shown if a page can't be found
    
    -->
    
    <Grid HorizontalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Image -->
        <TextBlock Text="&#xf5b4;"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Foreground="{StaticResource CustomGreyBrush}"
                   FontFamily="{StaticResource FontAwesomeSolid}"
                   FontSize="100"
                   Margin="0 0 0 20"
                   />
        
        <!-- Error text -->
        <TextBlock Grid.Row="1"
                   Foreground="{StaticResource CustomGreyBrush}"
                   Text="Sidan kunde tyvärr inte hittas" 
                   Style="{StaticResource MainHeaderText}" />

    </Grid>
</local:BasePage>
